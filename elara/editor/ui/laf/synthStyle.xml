<?xml version="1.0" encoding="UTF-8"?>
<synth>
	<style id="defaultStyle">
		<font name="Verdana" size="16"></font>

		<state>
			<color type="BACKGROUND" value="#262626"></color>
			<color type="FOREGROUND" value="#e5e5e5"></color>
		</state>
	</style>
		
	<bind style="defaultStyle" type="region" key=".*"></bind>
	
	<!--======================================================-->
	<!--                      BUTTONS                         -->     
	<!--======================================================-->
	 
	<style id="button">
		<!-- Shift the text one pixel when pressed -->
		<property key="Button.textShiftOffset" type="integer" value="1"/>
		<!-- set size of buttons -->
		<insets top="4" left="5" bottom="4" right="5"/>
		<state>
			<imagePainter method="buttonBackground" path="button.png" sourceInsets="5 5 5 5" ></imagePainter>
			<font name="Dialog" size="16"/>
			<color type="TEXT_FOREGROUND" value="#EEEEEE"/>
		</state>
            
		<state value="PRESSED"> 
			<imagePainter method="buttonBackground" path="button_press.png" sourceInsets="5 5 5 5" />
		</state>
          
		<state value="MOUSE_OVER">    
			<imagePainter method="buttonBackground" path="button_over.png" sourceInsets="5 5 5 5" />
		</state>
	</style>
	<bind style="button" type="region" key="Button"/>
	
</synth>